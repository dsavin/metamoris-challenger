<!-- Login form -->
<div class="login-form">
    <!-- Title -->
    <div class="title">User login</div>
    {% if error %}
        <div class="alert alert-danger">{{ error|nl2br }}</div>
    {% endif %}
    <!-- Intro text -->
    <p class="intro"><b>Already signed up for the Challenger?</b></p>
    <!-- Form fields -->
    <form action="{{ path('challenger_registration_login_check') }}" id="login"
          method="post">
        <!-- Username input -->
        <div class="field">
            <input placeholder="Email" name="_username" type="text"
                   id="username"
                   required/>
            <span class="entypo-user icon"></span>
            <span class="slick-tip left">Enter your email address</span>
        </div>
        <!-- Password input -->
        <div class="field">
            <input placeholder="Password" type="password"
                   id="password" name="_password" required/>
            <span class="entypo-lock icon"></span>
            <span class="slick-tip left">Enter valid password</span>
        </div>
        <div class="clrfx mt-10"></div>
        <!-- Signed in button -->
        <div class="w-47 mr-5 mt-5">
            <input type="checkbox" id="signed-in" name="_remember_me"
                   checked="checked"/>
            <label for="signed-in"
                   class="tick"><span>Keep me signed in</span></label>
        </div>
        <!-- Send button -->
        <input type="submit" value="Login" class="send"
                />
    </form>
    <!-- / Form fields -->
</div>
<!-- / Login form -->
